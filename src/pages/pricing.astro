      <Header
        links={[
          // { text: 'Home', href: '#' },
          { 
            text: 'Kdo jsem', 
            links: [
              { text: 'O mně', href: getPermalink('/#about') },
              { text: 'Má cesta', href: getPermalink('/my-journey') },
            ] 
          },
          { text: 'Má filozofie', href: getPermalink('/#philosophy') },
          { 
            text: 'Služby', 
            links: [
              { text: 'Služby', href: getPermalink('/#services') },
              { text: 'Detailní popis', href: getPermalink('/services') },
              { text: 'Ceník', href: getPermalink('/pricing') },
            ]
          },
          { text: 'Můj klient', href: getPermalink('/#client') },
          { text: 'Kontakt', href: getPermalink('/#contact') },
        ]}
        isSticky
        showToggleTheme
      />
    </Fragment>

