---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Header from '~/components/widgets/Header.astro';
import { getPermalink } from '~/utils/permalinks';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Martina Kaletová',
};
---

<Layout metadata={metadata}>
    <Fragment slot="announcement"></Fragment>
    <Fragment slot="header">
      <Header
        links={[
          // { text: 'Home', href: '#' },
          { 
            text: 'Kdo jsem', 
            links: [
              { text: 'O mně', href: getPermalink('/#about') },
              { text: 'Má cesta', href: getPermalink('/my-journey') },
            ] 
          },
          { text: 'Má filozofie', href: getPermalink('/#philosophy') },
          { 
            text: 'Služby', 
            links: [
              { text: 'Služby', href: getPermalink('/#services') },
              { text: 'Detailní popis', href: getPermalink('/services') },
              { text: 'Ceník', href: getPermalink('/pricing') },
            ]
          },
          { text: 'Můj klient', href: getPermalink('/#client') },
          { text: 'Kontakt', href: getPermalink('/#contact') },
        ]}
        isSticky
        showToggleTheme
      />
    </Fragment>

  <!-- HeroText Widget ******************* -->

  <Hero
    id="hero"
    title="Služby"
    tagline="Ceník"
  >
    <Fragment slot="subtitle">
      V této sekci se&nbsp;dozvíte vše, co vás o jednotlivých službách zajímá
